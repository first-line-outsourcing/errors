{
  "compilerOptions": {
    "module": "CommonJS",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "target": "es2020",
    "outDir": "./dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "esnext.asynciterable"]
  },
  "include": ["errors/**/*"]
}
